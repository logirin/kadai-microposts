<% if likes.any? %>
  <ul class="list-unstyled">
    <% likes.each do |like| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= gravatar_url(like.user, { size: 50 }) %>" alt="">
        <div class="media-body">
          <div>
            <p><%= link_to like.user.name, user_path(like.user) %></p>
          </div>
          <div>
            <p><%= like.content %></p>
          </div>
          <div>
              <%= render 'favorites/like_button', micropost: like %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%= paginate likes %>
<% end %>